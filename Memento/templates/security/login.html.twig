{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Vous êtes déjà connecté en tant que :  {{ app.user.username }}, <a href="{{ path('app_logout') }}">Deconnexion?</a>
        </div>
    {% endif %}
    <div class="container body">
        <div class="row justify-content-center">
            <div class="form-group col-12 col-sm-12 col-md-10 col-lg-6 col-xl-6 text-center">
                <h1 class="h3 mt-5 mb-5 font-weight-normal">Formulaire de connexion</h1>
                <label for="inputUserEmail" class="sr-only">Email</label>
                <input type="email" value="{{ last_username }}" name="userEmail" id="inputUserEmail" class="form-control mb-3 mt-3" placeholder="Votre email" required autofocus>
                <label for="inputPassword" class="sr-only">Mot de passe</label>
                <input type="password" name="password" id="inputPassword" class="form-control mb-3 mt-3" placeholder="Votre mot de passe" required>

                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >

                {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html

                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Remember me
                        </label>
                    </div>
                #}

                <button class="btn btn-lg btn-primary" type="submit">
                    Se connecter
                </button>
            </div>
        </div>
    </div>
</form>
{% endblock %}
